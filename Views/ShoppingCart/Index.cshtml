@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table border">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th class="float-right">Price</th>
            <th class="float-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ShoppingCart.ShoppingCartItemsDbSet)
        {
            <tr>
                <td class="align-content-center">@item.Amount</td>
                <td>@item.Candy.Name</td>
                <td class="align-content-end">@item.Candy.Price.ToString("c")</td>
                <td class="align-content-end">
                    @(item.Amount * item.Candy.Price).ToString("c"))
                </td>
            </tr>            
        }
    </tbody>
    </table>
    
    <div>
        <div colspan="3" class="float-right">Total</div>
        <div class="float-right">@Model.ShoppingCartTotal.ToString("c")</div>
    </div>


